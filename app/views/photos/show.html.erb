<div class="photo">
  <div class="container">
    <%= image_tag(@photo.img) %>
    <h1><%= @photo.title %></h1>
    <h2><%= @user.first_name %> <%= @user.last_name %></h2>
    <p><%= @photo.description %></p>
    <%= link_to "Back", user_path(@user), class: "btn btn-primary" %>

    <div class="comments">
      <h2>Comments:</h2>
      <%= render @photo.comments %>

      <h2>Add a comment:</h2>
      <%= render 'comments/form' %>
    </div>

  </div>
</div>