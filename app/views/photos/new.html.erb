<main class="new-photo">
  <div class="container">
    <div class="form">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <%= form_for ([@user, @photo]) do |f| %>
            <%= f.text_field :title, placeholder: "Title" %>
            <%= f.text_area :description, placeholder: "Description" %>
            <%= f.text_field :img, placeholder: "Url" %>
            <%= f.submit "Add photo", class: "btn-submit" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <% if @photo.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @photo.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</main>