<main class="signup">
<%= image_tag "nav/menu-white.svg", class: "nav icon" %>
  <div class="container">
    <div class="content">
      <h1>Get the latest updates from Stories</h1>
      <div class="row">
        <div class="form col-md-4 col-md-offset-4">
          <%= form_for @signup do |f| %>
          <div class="firstname">
            <%= f.label :firstname, "First name" %><br>
            <%= f.text_field :firstname, class: "input" %>
          </div>
          <div class="email">
            <%= f.label :email %><br>
            <%= f.text_field :email, class: "input" %>
          </div>
            <%= f.submit "Join", class: 'submit-btn' %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <% if @signup.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @signup.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>

